   <configIni use="default">
      <linux>/org.eclipse.scout.bahbah.server/products/production/config.ini</linux>
      <macosx>/org.eclipse.scout.bahbah.server/products/production/config.ini</macosx>
      <win32>/org.eclipse.scout.bahbah.server/products/production/config.ini</win32>
   </configIni>

   <launcherArgs>
      <programArgsLin>-os ${target.os} -ws ${target.ws} -arch ${target.arch} -nl ${target.nl}</programArgsLin>
      <programArgsMac>-os ${target.os}  -arch ${target.arch} -nl ${target.nl}</programArgsMac>
      <programArgsWin>-os ${target.os} -ws ${target.ws} -arch ${target.arch} -nl ${target.nl}</programArgsWin>
      <vmArgs>-Xms64m
-Xmx512m
-XX:MaxPermSize=256m</vmArgs>
   </launcherArgs>

   <launcher>
      <solaris/>
      <win useIco="false">
